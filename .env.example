# PostgreSQL Wire Server Configuration
PG_PORT=5432
PG_HOST=0.0.0.0
PG_USER=postgres
PG_PASSWORD=mysecretpassword

# Database Configuration
DB_NAME=myapp
DB_PATH=/tmp/myapp.sqlite

# Storage Backend (local, s3, azure)
STORAGE=local

# Local Storage
# (No additional config needed)

# S3 Storage
#STORAGE=s3
#S3_BUCKET=my-databases
#S3_REGION=us-east-1
#S3_PREFIX=sqlite-dbs/
#AWS_ACCESS_KEY_ID=your-access-key
#AWS_SECRET_ACCESS_KEY=your-secret-key

# Azure Blob Storage
#STORAGE=azure
#AZURE_STORAGE_ACCOUNT=myaccount
#AZURE_STORAGE_CONTAINER=sqlite-dbs
#AZURE_STORAGE_KEY=your-storage-key
# Or use managed identity (leave AZURE_STORAGE_KEY empty)
#AZURE_IDENTITY_CLIENT_ID=your-client-id

# Logging
LOG_LEVEL=info
LOG_FORMAT=text

# Performance
CONNECTION_POOL_SIZE=10
CACHE_TTL_MINUTES=5

# Optional: Config file path
#CONFIG_PATH=config.yaml
